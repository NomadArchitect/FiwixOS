diff -ru e2fsprogs-1.32/lib/ext2fs/llseek.c e2fsprogs-1.32.new/lib/ext2fs/llseek.c
--- e2fsprogs-1.32/lib/ext2fs/llseek.c	2002-02-24 21:03:59 +0000
+++ e2fsprogs-1.32.new/lib/ext2fs/llseek.c	2024-04-01 08:32:01 +0000
@@ -117,14 +117,30 @@
 #define EINVAL EXT2_ET_INVALID_ARGUMENT
 #endif
 
+static ext2_loff_t my_llseek (int fd, ext2_loff_t offset, int origin)
+{
+	ext2_loff_t result;
+	int retval;
+
+	retval = llseek(fd, (unsigned long long) (offset >> 32),
+			  ((unsigned long long) offset) & 0xffffffff,
+			&result, origin);
+	return (retval == -1 ? (ext2_loff_t) retval : result);
+}
+
 ext2_loff_t ext2fs_llseek (int fd, ext2_loff_t offset, int origin)
 {
-	if ((sizeof(off_t) < sizeof(ext2_loff_t)) &&
-	    (offset >= ((ext2_loff_t) 1 << ((sizeof(off_t)*8) -1)))) {
-		errno = EINVAL;
-		return -1;
-	}
-	return lseek (fd, (off_t) offset, origin);
+	ext2_loff_t result;
+
+	if ((sizeof(off_t) >= sizeof(ext2_loff_t)) ||
+	    (offset < ((ext2_loff_t) 1 << ((sizeof(off_t)*8) -1))))
+		return lseek(fd, (off_t) offset, origin);
+
+	result = my_llseek (fd, offset, origin);
+	if (result == -1 && errno == ENOSYS) {
+ 		errno = EINVAL;
+ 	}
+	return result;
 }
 
